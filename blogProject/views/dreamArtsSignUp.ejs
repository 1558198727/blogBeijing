<!DOCTYPE html>

<html lang="en" class="no-js">

<head>

    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%=title%></title>
    <meta name="description" content="Fullscreen Form Interface: A distraction-free form concept with fancy animations" />
    <meta name="keywords" content="fullscreen form, css animations, distraction-free, web design" />
    <meta name="author" content="Codrops" />
    <link rel="shortcut icon" href="../../img/HeadPhoto.ico">
    <link rel="stylesheet" type="text/css" href="../../dreamArtsSignUp/css/normalize.css" />
    <link rel="stylesheet" type="text/css" href="../../dreamArtsSignUp/css/demo.css" />
    <link rel="stylesheet" type="text/css" href="../../dreamArtsSignUp/css/component.css" />
    <link rel="stylesheet" type="text/css" href="../../dreamArtsSignUp/css/cs-select.css" />
    <link rel="stylesheet" type="text/css" href="../../dreamArtsSignUp/css/cs-skin-boxes.css" />

    <script src="../indexTwo/js/jquery.js"></script>
    <script src="../../dreamArtsSignUp/js/modernizr.custom.js"></script>
    <style>
        .qqErWeiMa{
            width: 10rem;
            height: 10rem;
            background-image: url(../../dreamArtsSignUp/img/QQqun.png);
            background-size:10rem 10rem;
            margin-top: 3rem;
            margin-left: 1rem;
            position: absolute;
        }
        @media screen and (max-width: 52.5em) {
            .qqErWeiMa{
                width: 4rem;
                height: 4rem;
                background-image: url(../../dreamArtsSignUp/img/QQqun.png);
                background-size:4rem 4rem;
                margin-top: 0rem;
                margin-left: 1rem;
                position: absolute;
            }
        }
    </style>
</head>

<body>

<div class="container">



    <div class="fs-form-wrap" id="fs-form-wrap">

        <div class="fs-title">

            <h1>梦创俱乐部2018</h1>
            <div class="qqErWeiMa">

            </div>
        </div>

        <form id="myform" class="fs-form fs-form-full" autocomplete="off" method="post">

            <ol class="fs-fields">

                <li>

                    <label class="fs-field-label fs-anim-upper" for="q1">请输入您的名字?</label>

                    <input class="fs-anim-lower" id="q1" name="q1" type="text" placeholder="您的名字"
                           onkeyup="value=value.replace(/[\d]/g,'') "
                           onbeforepaste="clipboardData.setData('text',clipboardData.getData('text').replace(/[\d]/g,''))"
                           maxlength="10" name="Numbers"
                           required/>

                </li>

                <li>

                    <label class="fs-field-label fs-anim-upper" for="q2">请输入您的学号</label>

                    <input class="fs-anim-lower" id="q2" name="q2" type="text" placeholder="请输入学号"
                           onkeyup="this.value=this.value.replace(/\D/g,'')"
                           onafterpaste="this.value=this.value.replace(/\D/g,'')"
                           maxlength="9" minlength="9"
                           required/>

                </li>

                <li>

                    <label class="fs-field-label fs-anim-upper" for="q3">请输入您的QQ号</label>

                    <input class="fs-anim-lower" id="q3" name="q3" type="text" placeholder="请输入QQ号"
                           onkeyup="this.value=this.value.replace(/\D/g,'')"
                           onafterpaste="this.value=this.value.replace(/\D/g,'')"
                           maxlength="11" minlength="6"
                           required/>

                </li>

                <li>

                    <label class="fs-field-label fs-anim-upper" for="q4">请输入您的手机号</label>

                    <input class="fs-anim-lower" id="q4" name="q4" type="text" placeholder="请输入手机号"
                           onkeyup="this.value=this.value.replace(/\D/g,'')"
                           onafterpaste="this.value=this.value.replace(/\D/g,'')"
                           maxlength="11" minlength="11"
                           required/>

                </li>


                <li>

                    <label class="fs-field-label fs-anim-upper" for="q5">简单描述一下特长</label>

                    <textarea class="fs-anim-lower" id="q5" name="q5" placeholder="Describe here"></textarea>

                </li>
                <li>

                    <label class="fs-field-label fs-anim-upper" for="code">请输入验证码</label>

                    <input class="fs-anim-lower" id="code" name="code" type="text" placeholder="已发送验证码"
                           onkeyup="this.value=this.value.replace(/\D/g,'')"
                           onafterpaste="this.value=this.value.replace(/\D/g,'')"
                           maxlength="4" minlength="4"
                           required/>

                </li>
                <!--<li>-->

                    <!--<label class="fs-field-label fs-anim-upper" for="q5">What's your budget?</label>-->

                    <!--<input class="fs-mark fs-anim-lower" id="q5" name="q5" type="number" placeholder="1000" step="100" min="100"/>-->

                <!--</li>-->

            </ol><!-- /fs-fields -->

            <button class="fs-submit" type="button" id="submit">提交</button>

        </form><!-- /fs-form -->


    </div><!-- /fs-form-wrap -->







</div><!-- /container -->

<script src="../../dreamArtsSignUp/js/classie.js"></script>

<script src="../../dreamArtsSignUp/js/selectFx.js"></script>

<script src="../../dreamArtsSignUp/js/fullscreenForm.js"></script>

<script>

    (function() {

        var formWrap = document.getElementById( 'fs-form-wrap' );



        [].slice.call( document.querySelectorAll( 'select.cs-select' ) ).forEach( function(el) {

            new SelectFx( el, {

                stickyPlaceholder: false,

                onChange: function(val){

                    document.querySelector('span.cs-placeholder').style.backgroundColor = val;

                }

            });

        } );



        new FForm( formWrap, {

            onReview : function() {

                classie.add( document.body, 'overview' ); // for demo purposes only

            }

        } );

    })();

</script>
<!--<script src="../indexTwo/js/jquery.js"></script>-->
<script type="text/javascript">

    $().ready(function() {
        $("#myform").validate();
    });
    var isSent = false;
    $(".fs-continue").click(function () {
        if($("#q4").val()!=="" && isSent===false){
            isSent = true;
            $.ajax({
                type: "POST",
                url: "/school/dreamArtsSignUpSendCode",
                dataType: "json",
                data: {
                    phoneNum:$("#q4").val()
                },
                success: function (data){
//
                    console.log(JSON.stringify(data));
                    if(!data.status){
                        alert(data.msg+"请重新注册！");
                        location.reload();

                    }
                }
                ,error:function(xhr){
//
                    console.log(xhr.responseText);
                }
            })
        }

    })
    // $("#q1").blur(function(){
    //     console.log("dfdas");
    // });
    $("#submit").click(function () {
        $.ajax({
            type: "POST",
            url: "/school/dreamArtsSignUp",
            dataType: "json",
            data: {
                name:$("#q1").val(),
                stuId:$("#q2").val(),
                qqNum:$("#q3").val(),
                phoneNum:$("#q4").val(),
                intro:$("#q5").val(),
                code:$("#code").val()
            },
            success: function (data){
//
                alert(data.status);

            }
            ,error:function(xhr){
//
                console.log(xhr.responseText);
            }
        })
    })
</script>


</body>

</html>