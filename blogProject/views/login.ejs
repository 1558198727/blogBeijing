<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
</head>
<body>

<div class="login-up">
    <img class="login-logo" src="/images/u2.png">
    <p>登录尚名校账号</p>
</div>
<div class="login-dowm">
    <form class="login-form-name">
        <label>手机号</label>
        <input type="text" placeholder="请输入手机号" id="phoneNumber" value="">
    </form>
    <form class="login-form-password">
        <label>密码</label>
        <input type="password" placeholder="请输入密码" id="password" value="">
    </form>
    <a href="/users/forgetpassword" class="login-forget"><p>忘记密码</p></a>
    <button type="submit" class="login-submit" onclick="sub1()">登录</button>
</div>
</body>
<script src="http://cdn.static.runoob.com/libs/jquery/1.10.2/jquery.min.js"></script>
<script type="text/javascript">
    var welcome=document.getElementsByClassName("welcome");
    for(var i=0;i<welcome.length;i++)
    {
        welcome[i].style.display="none";
    }
    /*var data={
        phoneNumber:document.getElementById("phoneNumber").value,
        password:document.getElementById("password").value

    }*/
    function sub1(){
        var userName=$("#phoneNumber").val();
        var passWord=$("#password").val();
        alert("用户名"+userName+"\n"+"密码"+passWord);

        $.ajax({
            type:"POST",
            url:"/users/login",
            dataType:"json",
            data:{
                phoneNumber:$("#phoneNumber").val(),
                password:$("#password").val(),
            },
            success:function(data){
                console.log("data"+data.status)
                if(data.status===true){
                    alert("登录成功！");
                    location.href="/";
                }
                else{
                    alert("登录失败！");
                }
            }

        })
    }
</script>
</html>
